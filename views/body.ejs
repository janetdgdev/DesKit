            </div>
            <div class="example full">
              <p>Full size thumbnail</p>
              <input type="text" class="coloris instance3" value="#ffcc00">
            </div>
          </div> -->
        </div>

        <!-- TIMER -->
        <%- include('partials/timer') -%>

        <!-- Ambiance Screensaver -->
        <%- include('partials/screensaver') -%>

        <!-- Homework Tools (trigger cards?) -->
        <%- include('partials/txteditor') -%>

        <!-- Planner / Calendar -->
        <%- include('partials/calendar') -%>

        <!-- Music -->
        <%- include('partials/youtube') -%>

        <!-- Sticky Notes -->
        <%- include('partials/sticky-notes') -%>

      </div>
    </div>
    <script type="text/javascript" src="/js/coloris.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/youtube.js"></script>
    <script src="/js/txteditor.js"></script>
    <script src="/js/main.js"></script>
